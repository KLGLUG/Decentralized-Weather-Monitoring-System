<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sowmya.smarthomeairmonitor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity">
            <intent-filter>
                <action android:name="com.example.sowmya.smarthomeairmonitor.Main2Activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TempForNormal">
            <intent-filter>
                <action android:name="com.example.sowmya.smarthomeairmonitor.TempForNormal" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".HumForNormal">
            <intent-filter>
                <action android:name="com.example.sowmya.smarthomeairmonitor.HumForNormal" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".GasForNormal">
            <intent-filter>
                <action android:name="com.example.sowmya.smarthomeairmonitor.GasForNormal" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminMain">
            <intent-filter>
                <action android:name="com.example.sowmya.smarthomeairmonitor.AdminMain" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TempForAdmin" />
        <activity android:name=".HumidForAdmin" />
        <activity android:name=".GasForAdmin">
            <intent-filter>
                <action android:name="com.example.sowmya.smarthomeairmonitor.GasForAdmin" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>